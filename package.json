{
  "name": "video-to-gif-converter",
  "version": "1.0.0",
  "description": "A simple video to GIF converter with batch processing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist-mac": "electron-builder --mac --publish=never",
    "dist-dir": "electron-builder --mac --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "build": {
    "appId": "com.yourname.video-to-gif-converter",
    "productName": "Video to GIF Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/ffmpeg-static/bin/linux/**",
      "!node_modules/ffmpeg-static/bin/win32/**",
      "!node_modules/ffprobe-static/bin/linux/**",
      "!node_modules/ffprobe-static/bin/win32/**"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "${productName}",
      "icon": false,
      "format": "ULFO"
    }
  }
}